#!/bin/bash
TARGET="$*"
if [[ "$TARGET" =~ ^[0-9]+$ ]] ; then
  TARGET="10.18.3.$TARGET"
  echo $TARGET
fi 

echo $(basename $0)

[[ $(basename $0) =~ vv ]] && OPT=1
[[ $(basename $0) =~ vc ]] && OPT=0
[[ $(basename $0) =~ pv ]] && VIA="-via hq"

VNC_COMMAND="vncviewer Fullscreen Viewonly=$OPT PasswordFile=~/vnc Log \
    -SendClipboard -AcceptClipboard -SendPrimary $VIA\
    $TARGET"
echo $VNC_COMMAND
eval $VNC_COMMAND

